{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "sidecar-capability",
    "description": "Permissions for running the backend sidecar",
    "windows": [
        "main"
    ],
    "permissions": [
        "shell:allow-execute",
        {
            "identifier": "shell:allow-execute",
            "allow": [
                {
                    "name": "binaries/nullgravity-core",
                    "sidecar": true
                }
            ]
        }
    ]
}